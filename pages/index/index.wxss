/**index.wxss**/

.navigator-hover {
  background-color: unset;
  opacity: 0.7;
}

.page-top {
  height: 40px;
  color: rgb(255, 255, 255);
}

.page-top .top-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgb(15, 37, 57);
}

.page-top .top-tip label {
  font-weight: 400;
  font-size: 36rpx;
  margin-left: 20rpx;
}

.page-top .top-tip button {
  width: 76px;
  height: 31px;
  padding: 0rpx;
  line-height: 31px;
  color: rgb(255, 255, 255);
  background-color: rgb(28, 190, 182);
  border-color: transparent;
  border-radius: 20px;
  font-size: 14px;
}

.page-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -50rpx;
}

.page-main .tip {
  height: 120rpx;
  font-size: 30rpx;
}

.page-main .btn {
  width: 565rpx;
  height: 200rpx;
  line-height: 200rpx;
  margin: 25rpx 0rpx;
  background-color: rgb(28, 190, 182);
  border-color: transparent;
  border-radius: 10px;
  color: rgb(255, 255, 255);
  font-size: 14px;
  padding: 0px;
  text-align: center;
  font-weight: normal;
  font-style: normal;
}

.btn image {
  width: 48rpx;
  height: 38rpx;
  margin: 0rpx 20rpx;
  vertical-align: middle;
}

.btn label {
  font-size: 36rpx;
}

.page-bottom {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-end;
}

.page-bottom .jump-standard {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-bottom .jump-standard > label {
  margin-bottom: 30rpx;
}
.page-bottom .jump-standard .buttons {
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.page-bottom .jump-standard .button {
  width: 170rpx;
  height: 50rpx;
  display: block;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  padding-left: 10rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  text-align: center;
  text-decoration: none;
  line-height: 1.777779;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #fff;
  background-color: #133960;
}

.page-bottom image {
  width: 48rpx;
  height: 38rpx;
  vertical-align: middle;
}

.wifi-tip {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 0rpx;
  width: 99%;
  margin-bottom: 0.5%;
  height: 280rpx;
  font-size: 14px;
  background-color: #fff;
}

.wifi-tip .wifi-ssid {
  width: 98%;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 50rpx;
  color: rgb(16, 16, 16);
  border-bottom: 1rpx solid rgba(187, 187, 187, 0.48);
}

.wifi-tip .wifi-pass {
  width: 98%;
  height: 190rpx;
  line-height: 190rpx;
  padding-left: 50rpx;
  color: rgb(16, 16, 16);
}

.wifi-tip .wifi-pass button {
  height: 190rpx;
  line-height: 190rpx;
  margin: 0rpx 0rpx 0rpx 50rpx;
  padding: unset;
  border: unset;
  display: inline-block;
  vertical-align: middle;
  background: unset;
  font-weight: 400;
  font-size: 14px;
  color: rgba(28, 190, 182, 1);
  text-decoration: underline;
}

.wifi-tip .wifi-pass button::after, .wifi-tip .wifi-pass button::before {
  border: unset;
}
